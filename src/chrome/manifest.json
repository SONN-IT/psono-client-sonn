{
  "manifest_version": 2,

  "name": "psono.PW",
  "description": "Psono Password Manager",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "data/img/icon-32.png",
    "default_popup": "data/main.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "tabs",
    "clipboardWrite",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "data/img/icon-16.png",
    "32": "data/img/icon-32.png",
    "48": "data/img/icon-48.png",
    "64": "data/img/icon-64.png",
    "128": "data/img/icon-128.png"
  },
  "omnibox": {
    "keyword": "pp"
  },
  "background": {
    "scripts": [
      "data/js/lib/jquery.min.js",
      "data/js/lib/sha512.min.js",
      "data/js/lib/sha256.min.js",
      "data/js/lib/ecma-nacl.min.js",
      "data/js/extension/jquery-api-client.js",
      "data/js/extension/worker-background-script.js",
      "data/js/background-script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": [
        "data/css/lib/cssreset-context-min.css"
      ],
      "js": [
        "data/js/lib/jquery.min.js",
        "data/js/extension/worker-content-script.js",
        "data/js/content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "data/index.html#!/settings",
  "web_accessible_resources": [
    "data/fonts/*.woff2",
    "data/css/contentscript.css"
  ]
}
