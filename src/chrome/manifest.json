{
  "manifest_version": 2,

  "name": "psono.PW",
  "description": "Psono Password Manager",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "data/img/icon-32.png",
    "default_popup": "data/main.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "tabs",
    "clipboardWrite"
  ],
  "icons": {
    "16": "data/img/icon-16.png",
    "32": "data/img/icon-32.png",
    "48": "data/img/icon-48.png",
    "64": "data/img/icon-64.png",
    "128": "data/img/icon-128.png"
  },
  "background": {
    "scripts": [
      "data/js/lib/jquery.min.js",
      "data/js/lib/sha512.min.js",
      "data/js/lib/sha256.min.js",
      "data/js/lib/ecma-nacl.min.js",
      "data/js/jquery-api-client.js",
      "index.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": [
        "data/css/lib/cssreset-context-min.css",
        "data/css/lib/opensans.css",
        "data/css/contentscript.css"
      ],
      "js": [
        "data/js/lib/tether.min.js",
        "data/js/lib/drop.min.js",
        "data/js/lib/jquery.min.js",
        "data/js/formfill-browser-client.js",
        "data/js/formfill.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "data/css/fonts/*.woff2"
  ]
}
