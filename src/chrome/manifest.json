{
  "manifest_version": 2,

  "name": "sanso.PW",
  "description": "Sanso Password Manager",
  "version": "1.0",

  "browser_action": {
    "default_icon": "data/img/icon-32.png",
    "default_popup": "data/main.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "tabs"
  ],
  "icons": {
    "16": "data/img/icon-16.png",
    "32": "data/img/icon-32.png",
    "48": "data/img/icon-48.png",
    "64": "data/img/icon-64.png",
    "128": "data/img/icon-128.png"
  },
  "background": {
    "scripts": ["data/js/lib/lokijs.min.js", "index.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "data/js/lib/jquery-2.1.4.js",
        "data/js/formfill-browser-client.js",
        "data/js/formfill.js"
      ]
    }
  ]
}
